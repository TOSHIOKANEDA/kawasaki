<%= render "layouts/header"%>

<table>
一般User
  <tr>
  <th>お名前</th>
  <td>会社名</td>
  <td>電話番号</td>
  <td>更新</td>
  <td>削除</td>
  </tr>
<% if @normal_users.present?%>
  <% @normal_users.each do |user| %>
    <tr>
      <th><%= user.name%></th>
      <td><%= user.company%></td>
      <td><%= user.phone%></td>
      <td><%= link_to '更新', edit_user_path(user.id), method: :get %></td>
      <td><%= link_to '削除', user_path(user.id), method: :delete %></td>
    </tr>
  <% end %>
<% end %>
</table>

