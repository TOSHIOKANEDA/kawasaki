<h1>Bookings#new</h1>
<p>Find me in app/views/bookings/new.html.erb</p>

<%= form_with model: @booking, local: true, url: {action: 'confirm'} do |f| %>
  <% if @booking.errors.any? %>
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% @booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :imp_cntr_num %>
    <%= f.text_area :imp_cntr_num%>
  </div>

  <div class="field">
    <%= f.label :exp_cntr_num %>
    <%= f.text_area :exp_cntr_num %>
  </div>
    
  <div class="field">
    <%= f.label :slot_id %>
    <%= f.collection_select(:slot_id, Slot.all, :id, :date, prompt: "日付を選択してください") %>
  </div>

  <div class="field">
    <%= f.label :off_action %>
    <%= f.select :off_action, options_for_select(Booking.off_actions.keys), { prompt: "選択してください" }, required: true%>
  </div>

  <div class="field">
    <%= f.label :on_action %>
    <%= f.select :on_action, options_for_select(Booking.on_actions.keys), { prompt: "選択してください" }, required: true%>
  </div>

  <%= f.submit "確認画面へ" %>

<% end %>